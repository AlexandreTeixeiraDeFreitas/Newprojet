{% block body %}
    <ul class="flex">
    <li class="mr-6">
        <a class="text-blue-500 hover:text-blue-800" href="{{ path('app_vehicule_index') }}">Vehicule</a>
    </li>
    <li class="mr-6">
        <a class="text-blue-500 hover:text-blue-800" href="{{ path('app_vehicule_new') }}">New vehicule</a>
    </li>
    <li class="mr-6">
        <a class="text-blue-500 hover:text-blue-800" href="{{ path('home') }}">article</a>
    </li>
    {% if is_granted('ROLE_USER') %}
    <li class="mr-6">
        <a class="text-blue-500 hover:text-blue-800" href="{{ path('new') }}">new article</a>
    </li>
    {% endif %}
    {% if app.user %}
    <li class="mr-6">
        <a class="text-blue-500 hover:text-blue-800" href="{{ path('app_logout') }}">Logout</a>
    </li>
    <li class="mr-6">
        <p class="text-blue-500 hover:text-blue-800">Bienvenue {{app.user.firstname}}</p>
    </li>
    {% else %}
    <li class="mr-6">
        <a class="text-blue-500 hover:text-blue-800" href="{{ path('app_login') }}">Login</a>
    </li>
    <li class="mr-6">
        <a class="text-blue-500 hover:text-blue-800" href="{{ path('app_register') }}">register</a>
    </li>
    {% endif %}
    </ul>
{% endblock %}